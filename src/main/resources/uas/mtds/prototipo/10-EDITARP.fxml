<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="uas.mtds.prototipo.Controllers.ModController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Label text="Modificar Producto.">
        <font>
          <Font size="24.0"/>
        </font>
    </Label>
    <Separator prefWidth="200.0"/>
    <ImageView fx:id="imgProd" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true"/>
    <VBox alignment="TOP_CENTER" spacing="5.0">
        <Label fx:id="labelNom" text="--- Nombre de producto ---">
            <font>
                <Font name="System Bold Italic" size="18.0"/>
            </font>
        </Label>
        <Label fx:id="labelDesc" text="-- Descripcion --"/>
    </VBox>
    <Separator prefWidth="200.0"/>
    <VBox>
        <TitledPane fx:id="tabSize" animated="false" text="TamaÃ±o">
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <RadioButton fx:id="radReg" mnemonicParsing="false" selected="true" text="Regular (Chico)">
                    <toggleGroup>
                        <ToggleGroup fx:id="radSize"/>
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="radMed" mnemonicParsing="false" text="Mediano" toggleGroup="$radSize"
                             GridPane.rowIndex="1"/>
                <RadioButton fx:id="radBig" mnemonicParsing="false" text="Grande" toggleGroup="$radSize"
                             GridPane.rowIndex="2"/>
                <RadioButton fx:id="radJum" mnemonicParsing="false" text="Jumbo" toggleGroup="$radSize"
                             GridPane.rowIndex="3"/>
            </GridPane>
        </TitledPane>
        <TitledPane fx:id="tabFlav" animated="false" expanded="false" text="Sabor">
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <RadioButton fx:id="radFlavReg" mnemonicParsing="false" selected="true" text="Regular">
                    <toggleGroup>
                        <ToggleGroup fx:id="radFlav"/>
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="radFlavCho" layoutX="20.0" layoutY="26.0" mnemonicParsing="false"
                             text="Chocolate" toggleGroup="$radFlav" GridPane.columnIndex="1"
                             GridPane.rowIndex="1"/>
                <RadioButton fx:id="radFlavVai" mnemonicParsing="false" text="Vainilla"
                             toggleGroup="$radFlav" GridPane.rowIndex="1"/>
                <RadioButton fx:id="radFlavAve" mnemonicParsing="false" text="Avellana"
                             toggleGroup="$radFlav" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <RadioButton fx:id="radFlavFre" layoutX="190.0" layoutY="56.0" mnemonicParsing="false"
                             text="Fresa" toggleGroup="$radFlav" GridPane.rowIndex="3"/>
                <RadioButton fx:id="radFlavCoc" layoutX="20.0" layoutY="86.0" mnemonicParsing="false"
                             text="Coco" toggleGroup="$radFlav" GridPane.columnIndex="1"
                             GridPane.rowIndex="3"/>
                <RadioButton fx:id="radFlavCar" mnemonicParsing="false" text="Caramelo"
                             toggleGroup="$radFlav" GridPane.rowIndex="2"/>
                <RadioButton fx:id="radFlavAlm" mnemonicParsing="false" text="Almendra"
                             toggleGroup="$radFlav" GridPane.rowIndex="4"/>
                <RadioButton fx:id="radFlavCan" mnemonicParsing="false" text="Canela" toggleGroup="$radFlav"
                             GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            </GridPane>
        </TitledPane>
    </VBox>
    <Separator prefWidth="200.0"/>
    <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="452.0" spacing="20.0">
        <HBox alignment="CENTER" spacing="10.0">
            <Label text="Cantidad:">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>
            <Spinner fx:id="spinQty" editable="true" styleClass="split-arrows-horizontal"/>
        </HBox>
        <Separator orientation="VERTICAL"/>
        <Button fx:id="btnSave" mnemonicParsing="false" text="Guardar" HBox.hgrow="ALWAYS">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
    </HBox>
</VBox>
