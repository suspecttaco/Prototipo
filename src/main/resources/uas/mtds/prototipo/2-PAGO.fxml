<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" pickOnBounds="false" prefHeight="750.0" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="uas.mtds.prototipo.Controllers.PayController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <VBox alignment="TOP_CENTER">
        <Label text="Punto de Venta" textAlignment="CENTER">
            <font>
                <Font name="Bookman Old Style" size="32.0"/>
            </font>
        </Label>
        <Label text="--Slogan aqui--">
            <font>
                <Font name="System Italic" size="16.0"/>
            </font>
        </Label>
    </VBox>
    <VBox alignment="TOP_CENTER" spacing="10.0" VBox.vgrow="SOMETIMES">
        <Label text="Resumen de Pedido">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
        <Separator nodeOrientation="LEFT_TO_RIGHT" opacity="0.5"/>
        <TableView fx:id="tableResumen">
            <columns>
                <TableColumn fx:id="columnConcepto" editable="false" prefWidth="75.0" text="Concepto"/>
                <TableColumn fx:id="columnMonto" editable="false" prefWidth="75.0" text="Monto"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <Separator opacity="0.5"/>
    </VBox>
    <GridPane alignment="CENTER" vgap="5.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES"/>
            <ColumnConstraints hgrow="SOMETIMES"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES"/>
            <RowConstraints vgrow="SOMETIMES"/>
            <RowConstraints vgrow="SOMETIMES"/>
            <RowConstraints vgrow="SOMETIMES"/>
        </rowConstraints>
        <TextField fx:id="textSubtotal" alignment="CENTER_RIGHT" editable="false" GridPane.columnIndex="1"/>
        <TextField fx:id="textIva" alignment="CENTER_RIGHT" editable="false" GridPane.columnIndex="1"
                   GridPane.rowIndex="1"/>
        <TextField fx:id="textTotal" alignment="CENTER_RIGHT" editable="false" GridPane.columnIndex="1"
                   GridPane.rowIndex="3"/>
        <Label text="Subtotal:"/>
        <Label text="I.V.A:" GridPane.rowIndex="1"/>
        <Label text="Total a pagar:" GridPane.rowIndex="3"/>
        <Separator opacity="0.5" GridPane.columnSpan="2" GridPane.rowIndex="2"/>
    </GridPane>
    <VBox alignment="TOP_CENTER" spacing="10.0">
        <Label text="Metodo de pago">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <HBox alignment="CENTER" spacing="10.0">
            <ToggleButton fx:id="toggleTarjeta" mnemonicParsing="false" text="Tarjeta de Credito/Debito">
                <toggleGroup>
                    <ToggleGroup fx:id="Pagos"/>
                </toggleGroup>
            </ToggleButton>
            <ToggleButton fx:id="togglePaypal" layoutX="171.0" layoutY="10.0" mnemonicParsing="false"
                          text="PayPal" toggleGroup="$Pagos"/>
            <ToggleButton fx:id="toggleTransferencia" layoutX="220.0" layoutY="10.0" mnemonicParsing="false"
                          text="Transferencia" toggleGroup="$Pagos"/>
            <ToggleButton fx:id="toggleEfectivo" layoutX="270.0" layoutY="10.0" mnemonicParsing="false"
                          text="Efectivo" toggleGroup="$Pagos"/>
        </HBox>
    </VBox>
    <Separator prefWidth="200.0"/>
    <Button mnemonicParsing="false" onAction="#cobrarPedido" prefWidth="410.0"
            text="ConfirmarPago"/>
</VBox>
