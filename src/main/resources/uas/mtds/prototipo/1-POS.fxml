<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uas.mtds.prototipo.PosController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="Sesion">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#actionSalir" text="Cerrar Sesion" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Caja">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#actionCorte" text="Corte de Caja" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Asistencia">
            <items>
              <MenuItem mnemonicParsing="false" text="Enviar ticket de soporte" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="1158.0">
         <children>
            <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
               <children>
                  <ImageView fitHeight="92.0" fitWidth="89.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/cafeteria.png" />
                     </image>
                  </ImageView>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets left="50.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="150.0" prefWidth="380.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label alignment="CENTER_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="379.0" text="Usuario">
                     <font>
                        <Font name="Roboto Medium" size="36.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets right="30.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
         </children>
      </HBox>
      <Separator prefWidth="200.0" />
      <HBox alignment="CENTER" prefWidth="1138.0" spacing="30.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER_RIGHT">
                     <children>
                        <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                           <children>
                              <Label contentDisplay="RIGHT" nodeOrientation="LEFT_TO_RIGHT" text="Productos">
                                 <font>
                                    <Font name="Roboto Medium" size="24.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <Button mnemonicParsing="false" onAction="#actionBuscarProductos" wrapText="true">
                           <graphic>
                              <ImageView nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@images/busqueda.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
                  <ListView fx:id="listProductos" VBox.vgrow="ALWAYS" />
                  <GridPane>
                     <columnConstraints>
                        <ColumnConstraints fillWidth="false" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints fillHeight="false" />
                     </rowConstraints>
                  </GridPane>
               </children>
            </VBox>
            <Separator orientation="VERTICAL" HBox.hgrow="ALWAYS" />
            <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER_RIGHT">
                     <children>
                        <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Pedido">
                                 <font>
                                    <Font name="Roboto Medium" size="24.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <Button mnemonicParsing="false" onAction="#actionEditarPedido" wrapText="true">
                           <graphic>
                              <ImageView pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@images/lapiz.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#actionEliminarPedido" wrapText="true">
                           <graphic>
                              <ImageView pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@images/basura.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
                  <TableView fx:id="tablePedido" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn prefWidth="75.0" text="Producto" />
                      <TableColumn prefWidth="75.0" text="Cantidad" />
                        <TableColumn prefWidth="75.0" text="Importe" />
                        <TableColumn prefWidth="75.0" text="Notas" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
            <Separator orientation="VERTICAL" HBox.hgrow="ALWAYS" />
            <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Hora &amp; Fecha">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="labelHora" text="12:00 PM">
                     <font>
                        <Font size="32.0" />
                     </font>
                  </Label>
                  <Label fx:id="labelFecha" text="29/04/2025">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font></Label>
                  <Separator prefWidth="200.0" />
                  <TableView fx:id="tableImporte" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn prefWidth="75.0" text="Concepto" />
                      <TableColumn prefWidth="75.0" text="Monto" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <Separator prefWidth="200.0" />
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Total" HBox.hgrow="ALWAYS">
                           <font>
                              <Font name="Roboto" size="14.0" />
                           </font></Label>
                        <TextField fx:id="textTotal" editable="false" HBox.hgrow="ALWAYS" />
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
                  <Separator prefWidth="200.0" />
                  <HBox alignment="CENTER" layoutX="20.0" layoutY="380.0" spacing="10.0">
                     <children>
                        <ToggleButton fx:id="toggleParaLlevar" mnemonicParsing="false" text="Para llevar">
                           <font>
                              <Font name="Roboto" size="16.0" />
                           </font></ToggleButton>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <Separator prefWidth="200.0" />
      <HBox alignment="CENTER_RIGHT" spacing="20.0" VBox.vgrow="SOMETIMES">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <GridPane HBox.hgrow="ALWAYS">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" />
                <ColumnConstraints hgrow="SOMETIMES" />
                  <ColumnConstraints hgrow="SOMETIMES" />
                  <ColumnConstraints hgrow="SOMETIMES" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="1.7976931348623157E308" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button fx:id="btnClientes" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#actionClientes" text="Clientes" GridPane.hgrow="ALWAYS" />
                  <Button fx:id="btnCancelar" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#actionCancelar" text="Cancelar Venta" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" />
                  <Button fx:id="btnCupon" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#actionCupon" text="Aplicar cupon" GridPane.columnIndex="2" GridPane.hgrow="ALWAYS" />
                  <Button fx:id="btnCobrar" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#actionCobrar" text="Cobrar" GridPane.columnIndex="3" GridPane.hgrow="ALWAYS" />
               </children>
            </GridPane>
         </children></HBox>
      <Separator prefWidth="200.0" />
   </children>
</VBox>
